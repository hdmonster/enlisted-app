<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css' />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/api/auth/signout">Logout</a>
    <p>
      <% if(messages.success){ %>
        <%= messages.success %>
      <% } %>
      <% if(messages.err){ %>
        <%= messages.err %>
      <% } %>
    </p>
    <h4>Join a Server</h4>
    <form action="/api/server/join" method="post">
      <input type="text" name="server_code" placeholder="Server Code..." >
      <input type="submit">
    </form>
    <h4>Your Server</h4>
    <table border="1">
      <thead>
        <tr>
          <td>No.</td>
          <td>Name</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% myServers.forEach(function(server,index) { %>
           <tr>
             <td><%= index += 1 %></td>
             <td><%= server.name %></td>
             <td>
                 <a href="/s/<%= server.id %>/announcement">Announcement</a>
                 <a href="/s/<%= server.id %>/list">List</a>
                 <a href="/s/<%= server.id %>/polls">Polls</a>
             </td>
           </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
