
<div class="container">
    <div class="recent_wrapper">
        <span>recent</span>
    </div>
    <div class="card-list-container">
        <% lists.forEach(function(list){ %>
            <div class="card-list" onclick="navigateNext('<%= list.id %>/view')">
                <div class="header">
                    <span class="title"><%= list.title %></span>
                    <span class="detail"><%= list.author.name %> -  <%= moment(list.createdAt, "DD/MM/YYYY HH:mm:ss").fromNow() %></span>
                </div>
                <div class="icon-container">
                    <i data-feather="chevron-right"></i>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- Toast -->
<script type="text/javascript">
    if('<%= messages.success %>'){
        showToast('success','<%= messages.success %>')
    }
    if('<%= messages.err %>'){
        showToast('failed','<%= messages.err %>')
    }
</script>
