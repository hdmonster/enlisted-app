<div class="poll-card-container">
    <div class="info_wrapper">
        <span class="author"><%= data.author.name %></span>
        <span class="end-time"> 
            <% if(!data.settings.isAlwaysAvailable){ %>
                Ends <%= moment(data.settings.availability.endDate, "DD/MM/YYYY").fromNow(); %>
            <% }else{ %>
                Always available
            <% } %>
        </span>
    </div>
    <div class="question_wrapper">
        <span>
            <%= data.question %>
        </span>
    </div>

    <form action="/api/<%= serverCode %>/poll/<%= data.id %>/vote" method="post">
        <% const currentDate = moment().format("DD/MM/YYYY") %>
        <div class="poll-wrapper">
            <% data.option.forEach((option,index) => { %>
               <input type="radio" id="vote-btn-<%= index %>" name="vote_option" value="<%= option.item %>">
               <label for="vote-btn-<%= index %>" class="btn"><%= option.item %></label>
            <% }); %>
        </div>
        <div class="vote-btn_wrapper">
            <button type="submit" class="btn-lg" <%- data.settings.isAlwaysAvailable ? '' : currentDate > data.settings.availability.endDate || currentDate < data.settings.availability.startDate ? 'disabled' : '' %> >vote</button>
        </div>
    </form>
</div>